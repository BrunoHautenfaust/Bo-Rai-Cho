<?xml version="1.0" encoding="utf-8" ?> 
<VoiceCommands xmlns="http://schemas.microsoft.com/voicecommands/1.1">
  <CommandSet xml:lang="en-us" Name="WinAppCommandSet_en-us">
    <CommandPrefix> App, </CommandPrefix>
    <Example> pick </Example>
  
    <Command Name="open">
      <Example> Open </Example>
      <ListenFor> Open </ListenFor>
      <ListenFor> Start </ListenFor>
      <Feedback> Opening App </Feedback>
      <Navigate/>
    </Command>
    
    <Command Name="pickPen">
      <Example> Pick pen </Example>
      <ListenFor> [Pick] pen </ListenFor>
      <ListenFor> [Select] pen </ListenFor>
      <Feedback> Pen </Feedback>
      <Navigate/>
    </Command>
    
    <Command Name="pickEraser">
      <Example> Pick eraser </Example>
      <ListenFor> [Pick] eraser </ListenFor>
      <ListenFor> [Select] eraser </ListenFor>
      <Feedback> Eraser </Feedback>
      <Navigate/>
    </Command>
      
    <Command Name="pickColor">
      <Example> Pick (color name) </Example>
      <ListenFor> [Pick] {color} </ListenFor>
      <ListenFor> [Select] {color} </ListenFor>
      <Feedback> {color} </Feedback>
      <Navigate/>
    </Command>

    <Command Name="clearCanvas">
      <Example> Clear </Example>
      <ListenFor> Clear [canvas] </ListenFor>
      <Feedback> Canvas cleared </Feedback>
      <Navigate/>
    </Command>
    
    <Command Name="save">
      <Example> Save </Example>
      <ListenFor> Save </ListenFor>
      <Feedback> Opening Save Dialogue </Feedback>
      <Navigate/>
    </Command>
    
    <Command Name="load">
      <Example> Load </Example>
      <ListenFor> Load </ListenFor>
      <Feedback> Opening Load Dialogue </Feedback>
      <Navigate/>
    </Command>
    
    <PhraseList Label="color">
      <Item> Black </Item>
      <Item> Red </Item>
      <Item> Orange </Item>
      <Item> Yellow </Item>
      <Item> Green </Item>
      <Item> White </Item>
      <Item> Gray </Item>
      <Item> Blue </Item>
      <Item> Purple </Item>
      <Item> Brown </Item>
    </PhraseList>

  </CommandSet>
    
<!-- Other CommandSets for other languages -->

</VoiceCommands>

